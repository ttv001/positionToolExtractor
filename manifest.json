{
  "manifest_version": 3,
  "name": "TV Position Tool Data Extractor",
  "version": "1.0",
  "description": "Displays Long/Short Position data in popup",
  "permissions": ["activeTab", "clipboardWrite"],
  "content_scripts": [
    {
      "matches": [
        "*://*.tradingview.com/chart/*",
        "*://in.tradingview.com/chart/*",
        "*://de.tradingview.com/chart/*",
        "*://fr.tradingview.com/chart/*",
        "*://it.tradingview.com/chart/*",
        "*://de.tradingview.com/chart/*",
        "*://pl.tradingview.com/chart/*",
        "*://tr.tradingview.com/chart/*",
        "*://ru.tradingview.com/chart/*",
        "*://br.tradingview.com/chart/*",
        "*://il.tradingview.com/chart/*",
        "*://jp.tradingview.com/chart/*",
        "*://kr.tradingview.com/chart/*",
        "*://cn.tradingview.com/chart/*",
        "*://es.tradingview.com/chart/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
